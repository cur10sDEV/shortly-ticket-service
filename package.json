{
  "name": "ticket-server",
  "type": "module",
  "scripts": {
    "dev:docker": "tsx --watch src/index.ts",
    "dev": "tsx --env-file=./.env.dev --watch src/index.ts",
    "build": "tsc",
    "start:docker": "node dist/src/index.js",
    "start": "node --env-file=./.env dist/src/index.js",
    "test:unit": "vitest --run",
    "test:coverage": "vitest --coverage",
    "test:ui": "vitest --ui --api 1337",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "format:check": "prettier --check 'src/**/*.{ts,js,json,css,md}'",
    "format": "prettier --write 'src/**/*.{ts,js,json,css,md}'",
    "prepare": "husky"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.7",
    "@hono/zod-validator": "^0.7.5",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/auto-instrumentations-node": "^0.67.2",
    "@opentelemetry/exporter-logs-otlp-http": "^0.208.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.208.0",
    "@opentelemetry/instrumentation-winston": "^0.53.0",
    "@opentelemetry/resources": "^2.2.0",
    "@opentelemetry/sdk-logs": "^0.208.0",
    "@opentelemetry/sdk-node": "^0.208.0",
    "@opentelemetry/semantic-conventions": "^1.38.0",
    "@opentelemetry/winston-transport": "^0.19.0",
    "hono": "^4.11.1",
    "pg": "^8.16.3",
    "winston": "^3.19.0",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@eslint/js": "^9.39.2",
    "@types/node": "^25.0.3",
    "@types/pg": "^8.16.0",
    "eslint": "^9.39.2",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "jiti": "^2.6.1",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.50.0"
  },
  "lint-staged": {
    "src/**/*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "otel/**/*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
